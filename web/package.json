{
  "name": "specmate",
  "version": "0.2.11",
  "description": "Specmate for co-engineering requirements and tests",
  "scripts": {
    "extract": "ngx-translate-extract -i ./src -o ./src/assets/i18n/de.json ./src/assets/i18n/gb.json -m ngx_trans_extr --sort --format namespaced-json",
    "lint": "tslint ./src/**/*.ts -t verbose --exclude './src/app/model/**/*.ts'",
    "clean": "rimraf ../bundles/specmate-ui-core/webcontent/*",
    "build-dev": "npm run extract && node node_modules/@angular/cli/bin/ng build --configuration=dev",
    "build-prod": "npm run clean && node node_modules/@angular/cli/bin/ng build --configuration=production",
    "dep-graph": "ngd -p src/tsconfig.json",
    "init": "npm prune && npm install",
    "license-check": "license-checker --summary --production",
    "update-check": "ncu",
    "check": "npm run lint && npm run license-check && npm run update-check",
    "update-dependencies": "ncu -u && npm run init"
  },
  "keywords": [],
  "author": "Qualicen GmbH",
  "license": "Apache-2.0",
  "dependencies": {
    "@angular/common": "7.2.2",
    "@angular/compiler": "7.2.2",
    "@angular/core": "7.2.2",
    "@angular/forms": "7.2.2",
    "@angular/http": "7.2.2",
    "@angular/platform-browser": "7.2.2",
    "@angular/platform-browser-dynamic": "7.2.2",
    "@angular/router": "7.2.2",
    "@ng-bootstrap/ng-bootstrap": "4.0.2",
    "@nguniversal/express-engine": "7.1.0",
    "@ngx-translate/core": "11.0.1",
    "@ngx-translate/http-loader": "4.0.0",
    "angular-split": "2.0.1",
    "angular2-uuid": "1.1.1",
    "bootstrap": "4.2.1",
    "bootswatch": "4.2.1",
    "classlist.js": "1.1.20150312",
    "core-js": "2.6.3",
    "file-saver": "2.0.0",
    "flag-icon-css": "3.2.1",
    "font-awesome": "4.7.0",
    "jquery": "3.3.1",
    "ng2-dragula": "2.1.1",
    "ngx-cookie": "4.1.2",
    "popper.js": "1.14.6",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.3.3",
    "rxjs-compat": "6.3.3",
    "typeface-open-sans": "0.0.54",
    "typeface-roboto": "0.0.54",
    "typeface-roboto-mono": "0.0.54",
    "zone.js": "0.8.29"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.12.3",
    "@angular/cli": "7.2.3",
    "@angular/compiler-cli": "7.2.2",
    "@biesbjerg/ngx-translate-extract": "2.3.4",
    "@types/file-saver": "2.0.0",
    "@types/jquery": "3.3.4",
    "angular2-dependencies-graph": "1.0.0-alpha.12",
    "license-checker": "25.0.1",
    "npm-check-updates": "2.15.0",
    "rimraf": "2.6.3",
    "regex-replace": "2.3.0",
    "tslint": "5.12.1",
    "typescript": "3.1.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/junkerm/specmate/"
  }
}
